<!--index.wxml-->
<!--轮播图-->
<view>
  <swiper indicator-dots='true' autoplay='true' interval='5000' duration='1000'>
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class='banner-pic'/>
      </swiper-item>
    </block>
  </swiper>
</view>

<!--试用中心-->
<image class='icon-syzx' src='static/img/icon-syzx.png'></image>
 <text class='text-syzx'>试用中心</text>
<scroll-view class='cont-scroll' scroll-y="true" bindscrolltolower="lower" bindscrolltoupper="upper" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
  <view class="container1">
    <view class='container1-left'>
    <image class='pic' src="static/img/n1.png"></image>
    </view>
    <view class='container1-right'>
      <text class='title'>天应北斗N1（体验版）</text>
      <text class='introduction'>简介：该产品是支持北斗RDSS/GNSS功能的蓝牙终端产品，具备短报文通信...</text>
        <button class='ljty' bindtap='mainN1'>立即体验</button>
    </view>
  </view>
  

